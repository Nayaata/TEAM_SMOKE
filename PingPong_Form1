using System;
using System.Collections.Generic;
using System.ComponentModel;
using System.Data;
using System.Drawing;
using System.Linq;
using System.Text;
using System.Threading.Tasks;
using System.Windows.Forms;

namespace PingPong
{
    public partial class Form1 : Form
    {

        public int speed_left = 4; //speed of ball
        public int speed_top = 4;
        public int speed_left1 = 2; //speed of ball1
        public int speed_top1 = 2;
        public int points = 0;
        public int levels = 1;

        public Form1()
        {
            InitializeComponent();

            timer1.Enabled = true;
            Cursor.Hide(); // hide the cursos

            this.FormBorderStyle = FormBorderStyle.None; //Remove any border
            this.TopMost = true;                         //Bring the form to the front
            this.Bounds = Screen.PrimaryScreen.Bounds;   //Make it fullscreen

            racket.Top = playground.Bottom - (playground.Bottom / 10); //Set the position of the racket

            gameover_lbl.Left = (playground.Width / 2) - (gameover_lbl.Width / 2); //Position to center
            gameover_lbl.Top = (playground.Height / 2) - (gameover_lbl.Height / 2);
            gameover_lbl.Visible = false; // Hide
        }

        private void timer1_Tick(object sender, EventArgs e)
        {

            racket.Left = Cursor.Position.X - (racket.Width / 2);  //Set teh center of the racket to the position of the cursor

            ball.Left += speed_left; //Move the ball
            ball.Top += speed_top;
            levels_lbl.Text = levels.ToString();



            

            if (ball.Bottom >= racket.Top && ball.Bottom <= racket.Bottom && ball.Left >= racket.Left && ball.Right <= racket.Right) //Racket collision
            {
                speed_top += 2;
                speed_left += 2;
                speed_top = -speed_top; //Charge direction
                points += 1;
                points_lbl.Text = points.ToString();
                

                Random r = new Random();
                playground.BackColor = Color.FromArgb(r.Next(150, 225), r.Next(150, 255), r.Next(150, 255)); //Pick random RBF Color

            }
            if (points >= 1 )
            {
                levels = 2;
                ball1.Visible = true;
                ball1.Left += speed_left; //Move the ball1
                ball1.Top += speed_top;

            }
            if (ball1.Visible == true && ball1.Bottom >= racket.Top && ball1.Bottom <= racket.Bottom && ball1.Left >= racket.Left && ball1.Right <= racket.Right) //Racket collision
            {

                speed_top1 += 1;
                speed_left1 += 1;
                speed_top1 = -speed_top1; //Charge direction
                points += 1;
                points_lbl.Text = points.ToString();

                Random r = new Random();
                playground.BackColor = Color.FromArgb(r.Next(150, 225), r.Next(150, 255), r.Next(150, 255)); //Pick random RBF Color

            }
            if (ball.Left <= playground.Left)
            {
                speed_left = -speed_left;
            }
            if (ball.Right >= playground.Right)
            {
                speed_left = -speed_left;
            }
            if (ball.Top <= playground.Top)
            {
                speed_top = -speed_top;
            }

            if (ball1.Left <= playground.Left)
            {
                speed_left1 = -speed_left1;
            }
            if (ball1.Right >= playground.Right)
            {
                speed_left1 = -speed_left1;
            }
            if (ball1.Top <= playground.Top)
            {
                speed_top1 = -speed_top1;
            }


            if (ball.Bottom >= playground.Bottom || ball1.Bottom >= playground.Bottom)
            {
                timer1.Enabled = false;// Ball is out -> Stop the game
                gameover_lbl.Visible = true;
            }
        }

        private void Form1_KeyDown_1(object sender, KeyEventArgs e)
        {
            if (e.KeyCode == Keys.Escape) { this.Close(); } //Press Escape to Quit
            if (e.KeyCode == Keys.F1)                       //Reload the game
            {
                ball.Top = 50;
                ball.Left = 50;
                speed_left = 4;
                speed_top = 4;
                points = 0;
                points_lbl.Text = "0";
                levels_lbl.Text = "1";
                timer1.Enabled = true;
                gameover_lbl.Visible = false;
                playground.BackColor = Color.White;

            }
        }









    }
}
